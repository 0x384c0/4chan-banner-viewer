body
  background-color: #000000

input[type=text]
  background: #ffb000
  border-radius: 5px
  -moz-border-radius: 5px
  -webkit-border-radius: 5px
  border: 3px solid #ff7700
  margin-top: 3px
  margin-right: 3px
  width: 250px

input[type=number]
  background: #ffb000
  border-radius: 5px
  -moz-border-radius: 5px
  -webkit-border-radius: 5px
  border: 3px solid #ff7700
  margin-top: 3px
  margin-right: 3px
  width: 250px

#button
  position: fixed
  top: 150px
  left: 0
  background: #0094d6
  width: 20px
  height: 50px
  color: #fff
  z-index: 5
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  transition-duration: 0.3s
  -webkit-border-radius: 0 5px 5px 0
  -moz-border-radius: 0 5px 5px 0
  border-radius: 0 5px 5px 0
  &:hover
    left: -30px
    #s_panel
      left: 0

#s_panel
  position: fixed
  top: 150px
  left: -600px
  background: #ff7700
  width: 600px
  height: 150px
  padding: 10px 0 0 0
  z-index: 5
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  transition-duration: 0.3s
  -webkit-border-radius: 0 5px 5px 0
  -moz-border-radius: 0 5px 5px 0
  border-radius: 0 5px 5px 0

*
  color: white

.w8-button
  display: table
  padding: 7px 15px 8px 15px
  border: none
  font-family: "open_sans_lightregular"
  font-size: 13px
  font-weight: bold
  cursor: pointer
  opacity: 0.9
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  transition-duration: 0.3s
  &:hover
    border-left: solid 3px white

.w8-button:hover, .w8-icon:hover
  opacity: 1

.w8-button:active, .w8-icon:active
  color white !important
  background-color: #191919 !important

.w8-button.red, .w8-icon.red
  background-color: #d9522c

.w8-button.green, .w8-icon.green
  background-color: #009900

.w8-button.pink, .w8-icon.pink
  background-color: #ae193e

.w8-button.d-blue, .w8-icon.d-blue
  background-color: #0099ab

.w8-button.yellow, .w8-icon.yellow
  background-color: #fba919

.w8-button.l-blue, .w8-icon.l-blue
  background-color: #2d87ef

.w8-button.violet, .w8-icon.violet
  background-color: #5b39b6

.w8-button.grey, .w8-icon.grey
  background-color: #474747

