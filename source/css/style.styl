
body
  background #ffe url('http://s.4cdn.org/image/fp/fade.png') top repeat-x
  color #800

img
  &.img_preview
    width:300px
    height:100px

input[type=text]
  background: #ffb000
  border-radius: 5px
  -moz-border-radius: 5px
  -webkit-border-radius: 5px
  border: 3px solid #ff7700
  margin-top: 3px
  margin-right: 3px
  width: 250px

input[type=number]
  background: #ffb000
  border-radius: 5px
  -moz-border-radius: 5px
  -webkit-border-radius: 5px
  border: 3px solid #ff7700
  margin-top: 3px
  margin-right: 3px
  width: 250px

#button
  position: fixed
  top: 150px
  left: 0
  background: #0094d6
  width: 20px
  height: 50px
  color: #fff
  z-index: 5
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  transition-duration: 0.3s
  -webkit-border-radius: 0 5px 5px 0
  -moz-border-radius: 0 5px 5px 0
  border-radius: 0 5px 5px 0
  &:hover
    left: -30px
    #s_panel
      left: 0

#s_panel
  position: fixed
  top: 150px
  left: -600px
  background: #ff7700
  display: inline-block
  padding: 10px 13px 13px 0
  z-index: 5
  -webkit-transition-duration: 0.3s
  -moz-transition-duration: 0.3s
  -o-transition-duration: 0.3s
  transition-duration: 0.3s
  -webkit-border-radius: 0 5px 5px 0
  -moz-border-radius: 0 5px 5px 0
  border-radius: 0 5px 5px 0



*
  color: white